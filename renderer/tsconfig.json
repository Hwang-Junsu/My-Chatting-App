{
  "extends": "../tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@libs/*": ["./libs/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@types/*": ["./types/*"],
      "@atoms/*": ["./atoms/*"],
      "@firebase": ["./firebase"]
    }
  }
}
